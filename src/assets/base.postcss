.focus-style {
  @apply focus:outline-none
         focus-visible:ring-2
         focus-visible:ring-offset-1
         focus-visible:ring-indigo-400
         focus-visible:ring-opacity-75;
}

span.ripple {
  position: absolute;
  border-radius: 100%;
  transform: scale(0);
  animation: ripple 600ms linear;
  background-color: rgba(255, 255, 255, 0.7);
}

@keyframes ripple {
  to {
    transform: scale(4);
    opacity: 0;
  }
}